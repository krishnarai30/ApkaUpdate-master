<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sd_dtu.apkaupdate.MenuActivity"
    android:background="#607D8B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/croplogo"
        android:id="@+id/imageView2"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newquerybtn"
        android:text="new query"
        android:background="@drawable/butshape"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/prevquerybtn"
        android:layout_alignEnd="@+id/prevquerybtn"
        android:layout_alignLeft="@+id/prevquerybtn"
        android:layout_alignStart="@+id/prevquerybtn"
        android:onClick="onClickNewQuery" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prevquerybtn"
        android:text="status of existing query"
        android:background="@drawable/butshape"
        android:textColor="#FFFFFF"
        android:layout_marginTop="65dp"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/newquerybtn"
        android:layout_centerHorizontal="true"
        android:onClick="onClickPrevQuery" />

        </RelativeLayout>
    </HorizontalScrollView>
    </ScrollView>
</RelativeLayout>
