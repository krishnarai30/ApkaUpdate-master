<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#607D8B">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            >
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="DISTRICT"
              android:gravity="center"
              android:textSize="30dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:textStyle="bold"
              android:textColor="#fff"
              />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/districtspinner"
                android:background="#9ab5bf"
                ></Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="POLICE STATION : "
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/police_station_spinner"
                android:background="#9ab5bf"
                ></Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FIR NUMBER : "
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the FIR no."
                android:id="@+id/fillno"
                android:background="@drawable/editshape"
                android:backgroundTint="#fff"
                android:inputType="number"
                android:paddingLeft="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INVESTIGATION OFFICER :"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:gravity="center"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/statusspinner"
                android:background="#9ab5bf"
                >
            </Spinner>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Specify the Mobile number"
                android:id="@+id/name"
                android:inputType="number"
                android:background="@drawable/editshape"
                android:paddingLeft="5dp"
                android:maxLength="10"
                android:backgroundTint="#fff"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QUERY : "
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/queryspinner"
                android:background="#9ab5bf"
                >
            </Spinner>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="Enter custom query within 100 characters"
                android:maxLength="100"
                android:gravity="top"
                android:padding="5dp"
                android:background="@drawable/editshape"
                android:backgroundTint="#fff"
                android:id="@+id/customquery"
                />
            <Button
                android:textColor="#FFFFFF"
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/butshape"
                android:text="Submit Query"
                android:id="@+id/dropdownbtn"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                />
        </LinearLayout>


    </ScrollView>



